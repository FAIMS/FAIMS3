# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

JAVA_KEYSTORE = ENV["JAVA_KEYSTORE"]
JAVA_KEYSTORE_PASSWORD = ENV["JAVA_KEYSTORE_PASSWORD"]
JAVA_KEY = ENV["JAVA_KEY"]
JAVA_KEY_PASSWORD = ENV["JAVA_KEY_PASSWORD"]
FIP_CLOSED_LANE = ENV["FIP_LANE"]
platform :android do  
  desc "Deploy a new version to Google Play"
  lane :deploy_alpha do
    gradle(task: "clean")
    gradle(task: "bundle",
           build_type: "Release",
           properties: {
              "android.injected.version.code" => `echo "$(($(date +%s)/60))" | tr -d "\n"`,
              "android.injected.version.name" => "0.3.0",
              "android.injected.signing.store.file" => JAVA_KEYSTORE,
              "android.injected.signing.store.password" => JAVA_KEYSTORE_PASSWORD,
              "android.injected.signing.key.alias" => JAVA_KEY,
              "android.injected.signing.key.password" => JAVA_KEY_PASSWORD,           
           }
           )
    upload_to_play_store(track: 'internal',
                         release_status: 'completed',
                        )
  end
  lane :deploy_fip do
    gradle(task: "clean")
    gradle(task: "bundle",
           build_type: "Release",
           properties: {
              "android.injected.version.code" => `echo "$(($(date +%s)/60))" | tr -d "\n"`,
              "android.injected.version.name" => "0.3.0-FIP-"+FIP_CLOSED_LANE,
              "android.injected.signing.store.file" => JAVA_KEYSTORE,
              "android.injected.signing.store.password" => JAVA_KEYSTORE_PASSWORD,
              "android.injected.signing.key.alias" => JAVA_KEY,
              "android.injected.signing.key.password" => JAVA_KEY_PASSWORD,           
           }
           )
    upload_to_play_store(track: FIP_CLOSED_LANE,
                         release_status: 'draft',
                        )
  end
end
