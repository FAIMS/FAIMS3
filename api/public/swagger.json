        "/notebooks/{id}/{viewID}.csv": {
            "get": {
                "summary": "Get records as CSV",
                "description": "Export notebook records as CSV for one form",
                "tags": [
                    "Export"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Notebook identifier",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "viewID",
                        "in": "path",
                        "description": "view (form) identifier",
                        "required": true,
                        "type": "string"
                    }
                ],
                "produces": [
                    "text/csv"
