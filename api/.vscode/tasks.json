{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "npx",
            "args": [
                "tsc",
                "-p",
                "${workspaceFolder}/tsconfig.json",
                "--watch"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc watch custom"
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc: watch - tsconfig.json"
        }
    ]
}