{
  "name": "@faims3/data-model",
  "packageManager": "pnpm@10.7.0",
  "version": "1.2.8",
  "description": "Database access layer for FAIMS3",
  "main": "./build/src/index.js",
  "module": "./build/esm/index.js",
  "types": "build/src/index.d.ts",
  "engines": {
    "node": "22"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/src/index.d.ts",
        "default": "./build/esm/src/index.js"
      },
      "require": {
        "types": "./build/src/index.d.ts",
        "default": "./build/src/index.js"
      }
    }
  },
  "files": [
    "build/src",
    "build/esm",
    "!build/**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "gts clean && rm -rf build",
    "dev": "pnpm run watch",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "NODE_ENV=test jest",
    "test-debug": "NODE_ENV=test jest --testTimeout=100000000",
    "test:watch": "NODE_ENV=test jest --watchAll=true",
    "coverage": "NODE_ENV=test jest --coverage --watchAll=false",
    "circular-dep-check": "madge -c --extensions ts src/",
    "lint": "pnpm run circular-dep-check && gts lint",
    "fix": "gts fix"
  },
  "author": "",
  "license": "Apache",
  "repository": {
    "type": "git",
    "url": "https://github.com/FAIMS/faims3-data-model"
  },
  "peerDependencies": {
    "pouchdb": "^9.0.0"
  },
  "dependencies": {
    "@types/pouchdb": "^6.4.2",
    "lodash": "^4.17.21",
    "pouchdb-security-helper": "^2.1.2",
    "uuid": "^9.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@fast-check/jest": "^1.6.0",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^22.13.14",
    "@types/uuid": "^9.0.0",
    "fast-check": "^3.6.3",
    "gts": "^5.3.1",
    "jest": "^29.4.3",
    "madge": "^8.0.0",
    "pouchdb-adapter-memory": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "ts-jest": "^29.0.5",
    "typescript": "^5.9.2"
  }
}
