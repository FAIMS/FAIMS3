{
  "name": "e2e",
  "type": "module",
  "devDependencies": {
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/appium-service": "^9.18.0",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "appium": "^2.11.5",
    "appium-uiautomator2-driver": "^3.10.0",
    "chromedriver": "^138.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wdio-wait-for": "^3.1.0"
  },
  "scripts": {
    "test:e2e": "wdio run wdio.conf.ts",
    "test:e2e:mobile": "VIEWPORT=mobile npm run test:e2e",
    "test:e2e:tablet": "VIEWPORT=tablet npm run test:e2e",
    "test:e2e:desktop": "VIEWPORT=desktop npm run test:e2e",
    "test:e2e:wide": "VIEWPORT=wide npm run test:e2e",
    "test:e2e:all": "npm run test:e2e:mobile && npm run test:e2e:tablet && npm run test:e2e:desktop && npm run test:e2e:wide",
    "test:e2e:android": "wdio run wdio.mobile.conf.ts",
    "test:e2e:ios": "PLATFORM=ios wdio run wdio.mobile.conf.ts"
  }
}
